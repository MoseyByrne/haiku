{
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "browser": true,
    "jquery": true,
    "node": true,
    "jest": true // removes "describe/test/expect is undefined" issue in test.js file
  },
  "rules": {
      "semi": 1,
      "indent": ["warn", 2],
      "no-debugger": "warn",
      "no-unused-vars": "off"
  }
}